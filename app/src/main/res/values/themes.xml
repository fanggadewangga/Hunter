<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hunter" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->

    </style>
    
    <style name="h1">
        <item name="android:fontFamily">@font/worksans_bold</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="h2">
        <item name="android:fontFamily">@font/worksans_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="body1">
        <item name="android:fontFamily">@font/plusjakartatext_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="body2">
        <item name="android:fontFamily">@font/plusjakartatext_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="h6">
        <item name="android:fontFamily">@font/plusjakartadisplay_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="h5">
        <item name="android:fontFamily">@font/plusjakartatext_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="caption">
        <item name="android:fontFamily">@font/plusjakartatext_regular</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>