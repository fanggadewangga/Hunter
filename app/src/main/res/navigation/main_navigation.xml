<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.raion.hunter.homepage.FragmentHomepage"
        android:label="fragment_homepage"
        tools:layout="@layout/fragment_homepage" >
        <action
            android:id="@+id/action_navigation_home_to_claimFragment"
            app:destination="@id/claimFragment" />
    </fragment>
    <fragment
        android:id="@+id/navigation_mission"
        android:name="com.raion.hunter.mission.FragmentMission"
        android:label="FragmentMission"
        tools:layout="@layout/fragment_mission"/>
    <fragment
        android:id="@+id/navigation_map"
        android:name="com.raion.hunter.map.FragmentMap"
        android:label="FragmentMap"
        tools:layout="@layout/fragment_map">
        <argument
            android:name="landmarkId"
            app:argType="integer"/>
        <action
            android:id="@+id/action_navigation_map_to_claimFragment"
            app:destination="@id/claimFragment" />
    </fragment>
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.raion.hunter.profile.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile"/>
    <fragment
        android:id="@+id/claimFragment"
        android:name="com.raion.hunter.claim.ClaimFragment"
        android:label="ClaimFragment"
        tools:layout="@layout/fragment_claim">
        <argument
            android:name="placeId"
            app:argType="string" />
    </fragment>
</navigation>